{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true
  },
  "include": ["./src"],
  "exclude": [
    "../../node_modules",
    "node_modules",
    "lib",
    "__tests__",
    "**.test.tsx",
    "**.test.ts"
  ]
}
